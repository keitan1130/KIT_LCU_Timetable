{
    "manifest_version": 3,
    "name": "KIT_LCU_TimeCalendar",
    "version": "1.0.0",
    "description": "KITのLCUから時間割とカレンダーを出力",
    "icons": {
        "128": "icons/icon.png"
    },

    "background": {
        "service_worker": "src/background.ts"
    },

    "content_scripts": [
        {
        "matches": [
            "https://virginia.jimu.kyutech.ac.jp/lcu-web/*"
        ],
        "js": ["src/timetable/content.ts"],
        "run_at": "document_idle"
        }
    ],

    "host_permissions": [
        "https://virginia.jimu.kyutech.ac.jp/lcu-web/*"
    ]
}
