{
    "manifest_version": 3,
    "name": "KIT_LCU_TimeCalendar",
    "version": "1.0.2",
    "description": "KITのLCUから時間割とカレンダーを出力",
    "homepage_url": "https://github.com/keitan1130/KIT_LCU_Timetable",
    "icons": {
        "128": "icons/icon.png"
    },

    "background": {
        "service_worker": "src/background.ts"
    },

    "content_scripts": [
        {
        "matches": [
            "https://virginia.jimu.kyutech.ac.jp/lcu-web/SC_07002B00_01/*",
            "https://virginia.jimu.kyutech.ac.jp/lcu-web/SC_18001B00_13/*"
        ],
        "js": ["src/timetable/content.ts"],
        "run_at": "document_idle"
        },
        {
        "matches": [
            "https://virginia.jimu.kyutech.ac.jp/lcu-web/SC_18001B00_02/*"
        ],
        "js": ["src/calendar/content.ts"],
        "run_at": "document_idle"
        }
    ]
}
